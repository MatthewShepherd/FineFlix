<div class="card">
  <div class="card-header deep-orange lighten-1 white-text">
    <h2><%= @category.name %></h2>
  </div>
  <div class="card-body">
    <%= link_to 'Film Categories', categories_path, class: 'btn btn-primary card-title' %>
    <%= link_to 'Home', root_path, class: 'btn btn-primary card-title' %>
  </div>
</div>

<div>
  <ul style="list-style: none">
    <% @films.each do |film| %>
    <li class="film-thumb"><%= link_to image_tag(film.thumbnail_url), category_film_path(film.category, film) %></li>

    <% end %>
  </ul>
</div>
