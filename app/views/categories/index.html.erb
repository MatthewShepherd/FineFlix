
<div class="card">
  <div class="card-header deep-orange lighten-1 white-text">
    <h3>Click Genre to see list of films</h3>
  </div>
  <div class="card-body">
    <%= link_to 'Home', root_path, class: 'btn btn-primary card-title' %>
  </div>
</div>

<ul style="list-style: none">
  <% @categories.each do |category| %>
    <li><%= link_to category.name, category_index_path(category) %></li>
  <% end %>
</ul>


